@using Microsoft.AspNetCore.Components.Web

<div class="card-page @(IsActive ? "active" : "")" style="background-image: url('@ImageUrl');">
    <div class="mask" style="background-image: url('/image/mask.png');"></div>
    <div class="content-box">
        <h3>@Title</h3>
        <p>@Description</p>
    </div>
</div>

@code {
    [Parameter]
    public string ImageUrl { get; set; } = "";

    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public string Description { get; set; } = "";

    [Parameter]
    public bool IsActive { get; set; } = false;
}
